<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="#6699"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Keyid"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
           android:layout_marginLeft="8dp"
            android:backgroundTint="@color/Blue"
            android:drawableLeft="@drawable/baseline_camera_alt_24"
            android:onClick="GenerateKey"
            android:text="Key"
            android:textSize="20dp"
            app:cornerRadius="15dp"
            tools:ignore="UsingOnClickInXml">
        </Button>

        <Button
            android:id="@+id/Examid"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
            android:backgroundTint="@color/Blue"
            android:drawableLeft="@drawable/baseline_camera_alt_24"
            android:text="Exam"
            android:onClick="Examcheck"
            android:textSize="20dp"
            app:cornerRadius="15dp">

        </Button>



        <Button
            android:id="@+id/SettingID"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/baseline_settings_24"
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"
            android:onClick="Setting"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            app:cornerRadius="7dp">

        </Button>


    </LinearLayout>




</LinearLayout>






